@model Actividad1ControlCuentasUsuario.Models.ViewModels.ActivacionCuentaViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<div id="Principal">
    <form method="post" action="~/Home/ActivarCuenta">

        <h2>Activar Cuenta</h2>
        <p>Le ha sido enviado un codigo de activación al correo electronico. Introduzca el codigo.</p>
        <input type="hidden" asp-for="Id" />
        <label class="b">Ingrese Código</label>
        <textarea style="width:150px" class="b" asp-for="codigoConfirmacion" required></textarea>

        <input class="b" type="submit" value="Activar" />

    </form>
</div>


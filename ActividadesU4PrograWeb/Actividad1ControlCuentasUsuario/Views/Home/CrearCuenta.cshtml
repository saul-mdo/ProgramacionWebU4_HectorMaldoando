@model Actividad1ControlCuentasUsuario.Models.ViewModels.CrearCuentaViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<div id="Principal">
    <form method="post" action="~/Home/CrearCuenta">
        <h2>Crear Cuenta</h2>
        <label class="b">Nombre de Usuario</label>
        <input required class="b" type="text" asp-for="Usuario.NombreUsuario" />
        <label class="b">Correo Electronico</label>
        <input required class="b" type="email" asp-for="Usuario.Correo" />
        <label class="b">Contraseña</label>
        <input required class="b" type="password" asp-for="Usuario.Contrasena" />
        <label class="b">Confirmar Contraseña</label>
        <input required class="b" type="password" asp-for="ConfirmarContraseña" />
        @Html.ValidationSummary()
        <input class="b" type="submit" value="Registrar" />
        <a id="cancel" href="~/Home/IniciarSesion">
            &#8678
        </a>

    </form>
</div>

